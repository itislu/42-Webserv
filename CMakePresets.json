{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "Build default",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -Wpedantic"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Build with -g",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -Wpedantic"
      }
    },
    {
      "name": "san",
      "displayName": "Debug with Sanitizers",
      "description": "Build with sanitizers",
      "binaryDir": "${sourceDir}/build/san",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -Wpedantic -fsanitize=undefined,address,bounds,float-divide-by-zero",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=undefined,address,bounds,float-divide-by-zero"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "san",
      "configurePreset": "san"
    }
  ]
}
