CompileFlags:
  Add:
    [
      -Wall,
      -Wextra,
      -Werror,
      -Wpedantic,
      -Wdocumentation,
      -std=c++98,
      --language=c++,
      -ftemplate-depth=100, # Prevent crash when infinite template recursion.
    ]
  Compiler: c++

Diagnostics:
  ClangTidy:
    FastCheckFilter: None
  Includes:
    AnalyzeAngledIncludes: true
    IgnoreHeader: 'asm-generic/socket.h' # Use sys/socket.h for SOL_SOCKET, SO_REUSEADDR.
  MissingIncludes: Strict

InlayHints:
  BlockEnd: true
  DefaultArguments: true

Documentation:
  CommentFormat: Doxygen
